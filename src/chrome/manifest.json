{
  "manifest_version": 2,
  "name": "imarex",
  "version": "0.2",

  "description": "INFOnline GmbH: Market Research Extension for Firefox & Chrome",

  "icons": {
    "48": "icons/io48.png",
    "96": "icons/io96.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "19": "buttons/io19.png",
      "38": "buttons/io38.png"
    },
    "default_popup": "popup/popup.html",
    "browser_style": true,
    "default_title": "IMAREX"
  },
  "permissions": [
    "tabs",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/"],
      "js": ["content.js"]
    }
  ]
}
