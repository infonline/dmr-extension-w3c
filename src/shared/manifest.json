{
  "manifest_version": 2,
  "name": "imarex",
  "version": "0.0.1",
  "author": "Jens Oswald <joswald@infonline.de>",
  "description": "INFOnline GmbH: Market Research Extension",
  "icons": {
    "48": "images/io48.png",
    "96": "images/io96.png"
  },
  "background": {
    "scripts": ["scripts/background.js"]
  },
  "browser_action": {
    "default_icon": {
      "19": "images/io19.png",
      "38": "images/io38.png"
    },
    "default_popup": "pages/popup.html",
    "default_title": "IMAREX"
  },
  "permissions": [
    "tabs",
    "gcm",
    "store",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/"],
      "js": ["scripts/content.js"]
    }
  ]
}
