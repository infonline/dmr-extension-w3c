{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "version": "0.12.2",
  "author": "Jens Oswald <joswald@infonline.de>",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "icons": {
    "48": "images/imarex48.png",
    "96": "images/imarex96.png"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "browser_action": {
    "default_title": "__MSG_extensionName__",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "<all_urls>",
    "http://*/",
    "https://*/"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": [
        "scripts/content.js"
      ],
      "run_at": "document_start"
    }
  ]
}
